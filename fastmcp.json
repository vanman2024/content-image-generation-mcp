{
  "$schema": "https://gofastmcp.com/public/schemas/fastmcp.json/v1.json",
  "name": "content-image-generation-mcp",
  "version": "1.0.0",
  "description": "AI-powered content and image generation with Google Imagen 3/4, Veo 3, and Gemini 2.0 Flash",
  "source": {
    "path": "server.py",
    "entrypoint": "mcp"
  },
  "environment": {
    "python": ">=3.10",
    "dependencies": [
      "fastmcp>=2.13.0",
      "google-cloud-aiplatform>=1.40.0",
      "anthropic>=0.40.0",
      "google-generativeai>=0.3.0",
      "python-dotenv>=1.0.0",
      "pydantic>=2.0.0"
    ],
    "env": {
      "GOOGLE_CLOUD_PROJECT": {
        "description": "Google Cloud Project ID",
        "required": true
      },
      "GOOGLE_API_KEY": {
        "description": "Google AI API Key for Gemini",
        "required": true
      },
      "GOOGLE_CLOUD_LOCATION": {
        "description": "Google Cloud location",
        "default": "us-central1"
      },
      "ANTHROPIC_API_KEY": {
        "description": "Anthropic API key for Claude (optional)",
        "required": false
      }
    }
  },
  "deployment": {
    "transport": "http",
    "log_level": "INFO",
    "env": {
      "GOOGLE_CLOUD_PROJECT": "${GOOGLE_CLOUD_PROJECT}",
      "GOOGLE_API_KEY": "${GOOGLE_API_KEY}",
      "GOOGLE_CLOUD_LOCATION": "${GOOGLE_CLOUD_LOCATION}"
    }
  },
  "metadata": {
    "author": "FastMCP Build System",
    "license": "MIT",
    "repository": "https://github.com/yourusername/content-image-generation-mcp",
    "keywords": [
      "ai",
      "image-generation",
      "video-generation",
      "content-generation",
      "google-imagen",
      "google-veo",
      "gemini",
      "mcp",
      "fastmcp"
    ]
  }
}
