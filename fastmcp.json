{
  "$schema": "https://gofastmcp.com/public/schemas/fastmcp.json/v1.json",
  "name": "content-image-generation-mcp",
  "version": "1.0.0",
  "description": "AI-powered content and image generation with Google Imagen 3/4, Veo 3, and Gemini 2.5 Flash",
  "source": {
    "path": "server.py",
    "entrypoint": "mcp"
  },
  "environment": {
    "python": ">=3.10",
    "dependencies": [
      "fastmcp>=2.13.0",
      "anthropic>=0.40.0",
      "google-genai>=1.0.0",
      "python-dotenv>=1.0.0",
      "pydantic>=2.0.0"
    ],
    "env": {
      "GOOGLE_API_KEY": {
        "description": "Google AI API Key for Gemini (Imagen, Veo, content generation)",
        "required": true
      },
      "ANTHROPIC_API_KEY": {
        "description": "Anthropic API key for Claude content generation (optional)",
        "required": false
      }
    }
  },
  "deployment": {
    "transport": "http",
    "log_level": "INFO",
    "env": {
      "GOOGLE_API_KEY": "${GOOGLE_API_KEY}",
      "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}"
    }
  },
  "metadata": {
    "author": "FastMCP Build System",
    "license": "MIT",
    "repository": "https://github.com/vanman2024/content-image-generation-mcp",
    "keywords": [
      "ai",
      "image-generation",
      "video-generation",
      "content-generation",
      "google-imagen",
      "google-veo",
      "gemini",
      "mcp",
      "fastmcp"
    ]
  }
}
